---
export interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<li id="navbar-item">
	<a href={href} style="text-align: center;" target="_blank">{title}</a>
</li>

<style>
#navbar-item {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  padding: 0.1rem;
  background-image: var(--accent-gradient);
  background-size: 400%;
  border-radius: 0.5rem;
  background-position: 100%;
  -webkit-transition: background-position 0.6s cubic-bezier(0.22, 1, 0.22, 1);
  -o-transition: background-position 0.6s cubic-bezier(0.22, 1, 0.22, 1);
  transition: background-position 0.6s cubic-bezier(0.22, 1, 0.22, 1);
  -webkit-box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
}

#navbar-item > a {
  width: 100%;
  text-decoration: none;
  padding: 0.8rem;
  border-radius: 0.35rem;
  color: #111;
  background-color: white;
  opacity: 0.8;
}

#navbar-item:is(:hover) {
  background-position: 0;
}

#navbar-item:is(:hover) a {
  color: rgb(var(--accent));
}
</style>
